<% include ./partials/header %>

<div class="ui main container segment">
  <div class="ui huge header">Edit <%= view.title %> </div>
  <form class="ui form" action="/blogs/<%=view._id%>?_method=PUT" method="POST">
      <div class="field">
      <label>Title</label>
      <input type="text" name="blog[title]" value="<%= view.title %>">
    </div>
    <div class="field">
      <label>Image</label>
      <input type="text" name="blog[image]" value="<%= view.image %>">
    </div>
    <div class="field">
      <label>Blog Content</label>
      <textarea name="blog[discription]"><%= blog.discription %></textarea>
    </div>
    <input class="ui violet big basic button" type="submit">
  </form>
</div>



<% include ./partials/footer %>
