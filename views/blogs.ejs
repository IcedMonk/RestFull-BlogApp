<% include ./partials/header %>
<div class="ui main text container">
  <div class="ui huge header">RESTFUL Blog App</div>
  <div class="ui top attached segment">
    <div class="ui divided items">
      <%  everything.forEach( function (view) { %>
        <div class="item">
          <div class="image">
            <img src = "<%=  view.image  %>">
          </div>
          <div class="container">
            <a class="header" href="/blogs/<%= view._id %>"><%=  view.title %></a>
            <div class="meta">
              <span><%=  view.created.toDateString()  %></span>
            </div>
            <div class="description">
              <p><%- view.discription.substring(0, 100)  %>...</p>
            </div>
            <div class="extra">
              <a class="ui floated basic violet button" href="/blogs/<%= view._id %>">
                Read More
                <i class="right chevron icon"></i>
              </a>
            </div>
          </div>
        </div>
    <%  } ); %>
    </div>
  </div>
</div>

<% include ./partials/footer %>
